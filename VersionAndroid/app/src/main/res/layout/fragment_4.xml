<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment4"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#B896A1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="#4E091A"
        android:text="Listas"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Características"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Las características principales de las listas en Android incluyen la organización vertical de elementos con scroll, la capacidad de mostrar datos de forma práctica y la posibilidad de tener múltiples líneas para cada entrada. Se utilizan los componentes LazyColumn y LazyHorizontalStaggeredGrid para cargar elementos de forma eficiente y evitar la sobrecarga de la memoria, además de poder implementar diseño de lista-detalle para mejor experiencia."
        android:textColor="#000000"
        android:paddingTop="20dp"
        android:gravity="center"/>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="10dp"
        android:src="@mipmap/listas" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ejemplo práctico"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/Lista"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:dividerHeight="1dp"
        android:divider="@android:color/darker_gray"
        android:clipToPadding="false" />


    <Button
        android:id="@+id/regresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regresar al inicio"
        android:textColor="#FFFFFF"
        android:backgroundTint="#000000"
        android:layout_marginTop="16dp" />

</LinearLayout>
